{{> header}}

<div class="mdl-layout mdl-js-layout">
  <header class="mdl-layout__header mdl-layout__header--scroll">
    {{#if client.name}}<img class="mdl-layout-icon"></img>{{/if}}
    <div class="mdl-layout__header-row">
      <span class="mdl-layout__title">Ohh there's an error...</span>
      <div class="mdl-layout-spacer"></div>
    </div>
  </header>

  <main class="mdl-layout__content">
    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--4-offset-desktop mdl-cell--4-col-desktop mdl-cell--1-offset-tablet mdl-cell--6-col-tablet mdl-cell--8-col-phone">
        <div class="form-wrapper form-wrapper__error">
          <div>
            <h1>
              Error!
            </h1>
            <p>
              Unfortunately, something unexpected happened.<br/>
              Some details are listed below - that's all we know for now.
            </p>
            <p>
              {{#if error.message }}
              <code>{{ error.message }}</code>
              {{else}}
              <pre>{{ error }}</pre>
              {{/if}}
            </p>
            <div class="form--submit">
              <a class="mdl-button mdl-js-button mdl-button--raised" href="{{#if returnTo }}{{ returnTo }}{{else}}/{{/if}}">
                Back
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

{{> footer}}